<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#D3A9A9"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp">

        <TextView
            android:id="@+id/titleField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:backgroundTint="#880E4F"
            android:freezesText="false"
            android:paddingVertical="4dp"
            android:paddingStart="16dp"
            android:text="Login"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTxtEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="#EDDAE3"
            android:hint=" Email"
            android:inputType="textMultiLine|textNoSuggestions"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:scrollbars="horizontal"
            android:textColor="#202C32"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTxtPwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="#EDDAE3"
            android:hint=" Password"
            android:inputType="textMultiLine|textPassword"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:scrollbars="horizontal"
            android:textColor="#202C32"
            android:textSize="30sp" />

        <Button android:id="@+id/launchMain"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="Login"
            android:textSize="23dp"
            app:backgroundTint="#4B59AE"
            android:onClick="onClickLogin"
            tools:ignore="HardcodedText"/>

        <Button android:id="@+id/launchCreateAcc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:onClick="onClickLaunchCreateAcc"
            android:text="Create An Account"
            android:textSize="23dp"
            app:backgroundTint="#93984E"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/errorLogin"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Some kind of error here"
            android:textAllCaps="false"
            android:textSize="23dp"
            android:visibility="invisible"
            app:backgroundTint="#B6839B"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>