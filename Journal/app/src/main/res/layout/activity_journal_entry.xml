<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#D3A9A9"
    tools:context=".JournalEntryActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="188dp">

        <TextView
            android:id="@+id/txtJournalEntryHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:backgroundTint="#880E4F"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:text="Journal Entry"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#FFFFFF" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="501dp"
            app:boxBackgroundColor="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTxtJournalEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:backgroundTint="#EDDAE3"
                android:hint="What's on your mind?"
                android:inputType="textMultiLine|textNoSuggestions"
                android:singleLine="false" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnReturnToMain"
        app:layout_constraintStart_toStartOf="@+id/linearLayout">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#B6839B"
            android:onClick="onClickClear"
            android:text="Clear" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#4B59AE"
            android:onClick="onClickSubmit"
            android:text="Submit" />
    </LinearLayout>

    <Button
        android:id="@+id/btnReturnToMain"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#44746F"
        android:onClick="onClickReturnToMain"
        android:text="Back To Main"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>