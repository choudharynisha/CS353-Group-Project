<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#D3A9A9"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp">

        <TextView
            android:id="@+id/titleField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:backgroundTint="#880E4F"
            android:freezesText="false"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTxtName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#EDDAE3"
            android:hint=" Preferred Name"
            android:inputType="textMultiLine|textNoSuggestions"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:scrollbars="horizontal"
            android:textColor="#202C32"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTxtEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="#EDDAE3"
            android:hint=" Email"
            android:inputType="textMultiLine|textNoSuggestions"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:scrollbars="horizontal"
            android:textColor="#202C32"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTxtPwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="#EDDAE3"
            android:hint=" Password"
            android:inputType="textNoSuggestions|textPassword"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:scrollbars="horizontal"
            android:textColor="#202C32"
            android:textSize="30sp" />

        <Button android:id="@+id/launchMain"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="Create Account"
            android:textSize="23dp"
            app:backgroundTint="#4B59AE"
            android:onClick="onClickCreateAcc"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/errorCreateAcc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Some kind of error here"
            android:textAllCaps="false"
            android:textSize="22dp"
            app:backgroundTint="#B6839B"
            tools:ignore="HardcodedText"
            android:visibility="invisible"/>


    </LinearLayout>

    <Button
        android:id="@+id/launchDashboard"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:onClick="onClickReturnLogin"
        android:text="Back"
        android:textSize="23dp"
        app:backgroundTint="#44746F"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteX="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>